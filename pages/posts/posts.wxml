<view class="container">
  <swiper indicator-dots autoplay>
    <view wx:for="{{posts}}" wx:key="index" wx:for-item="post">
      <swiper-item>
        <image src="{{post.imgSrc}}" bindtap="clickCarouselItem" data-post-id="{{post.postId}}"></image>
      </swiper-item>
    </view>
  </swiper>

  <block wx:for="{{posts}}" wx:for-item="post">
    <c-post post="{{post}}" wx:key="index" />
  </block>

</view>