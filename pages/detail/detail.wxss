/* pages/detail/detail.wxss */
.container {
  display: flex;
  flex-direction: column;

}

.head-image {
  width: 100%;
  height: 460rpx;
}

.subtitle {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.subtitle .author {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.subtitle .avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #4b556c;
  margin-left: 20rpx;
  letter-spacing: 2px;
}

.more {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}

.circle-images {
  display: flex;
  justify-content: flex-end;
  width: 100%;
  z-index: 9;
}

.more .icon {
  float: right;
  margin-left: 20rpx;
  width: 90rpx;
  height: 90rpx;
}

.horizon {
  position: absolute;
  top: 50%;
  width: 90%;

  height: 1px;
  background-color: #e5e5e5e5;
}

.detail-content {
  font-size: 24rpx;
  padding: 20rpx;
  line-height: 50rpx;
}